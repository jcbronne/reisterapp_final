<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_create_employee"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uark.uarkregisterapp.CreateEmployeeActivity">

    <TextView
        android:text="@string/text_view_create_employee_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/text_view_create_employee_welcome"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/text_edit_create_employee_first_name"
        android:layout_below="@+id/text_view_create_employee_welcome"
        android:layout_centerHorizontal="true"
        android:hint="@string/text_edit_create_employee_first_name" />

    <Button
        android:text="@string/button_create_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_create_user_profile"
        android:onClick="createUserProfileButtonOnClick"
        android:layout_below="@+id/text_edit_create_employee_password_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/text_edit_create_employee_password"
        android:hint="@string/text_edit_create_employee_password"
        android:layout_below="@+id/text_edit_create_employee_last_name"
        android:layout_alignLeft="@+id/text_edit_create_employee_last_name"
        android:layout_alignStart="@+id/text_edit_create_employee_last_name"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/text_edit_create_employee_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_edit_create_employee_password"
        android:layout_alignStart="@+id/text_edit_create_employee_password"
        android:layout_below="@+id/text_edit_create_employee_password"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/text_edit_create_employee_password_confirm"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/text_edit_create_employee_last_name"
        android:hint="@string/text_edit_create_employee_last_name"
        android:layout_below="@+id/text_edit_create_employee_first_name"
        android:layout_alignLeft="@+id/text_edit_create_employee_first_name"
        android:layout_alignStart="@+id/text_edit_create_employee_first_name"
        android:layout_marginTop="14dp" />
</RelativeLayout>
