<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uark.uarkregisterapp.HomeScreenActivity">

    <TextView
        android:id="@+id/text_view_home_screen_welcome_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/text_view_home_screen_welcome_line1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button_home_screen_start_transaction"
        android:onClick="startTransactionButtonOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/button_home_screen_start_transaction"
        android:layout_below="@+id/text_view_home_screen_welcome_line1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_home_screen_create_employee"
        android:onClick="createEmployeeButtonOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/button_home_screen_create_employee"
        android:layout_below="@+id/button_home_screen_start_transaction"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/button_home_screen_sales_report_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/button_home_screen_sales_report_product"
        android:onClick="viewSalesReportProductButtonOnClick"
        android:layout_below="@+id/button_home_screen_create_employee"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/button_home_screen_sales_report_cashier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/button_home_screen_sales_report_cashier"
        android:onClick="viewSalesReportCashierButtonOnClick"
        android:layout_below="@+id/button_home_screen_sales_report_product"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/button_log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/button_log_out"
        android:onClick="logoutButtonOnClick"
        android:layout_below="@+id/button_home_screen_sales_report_cashier"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
