<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Welcome! Please log in."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/text_view_create_employee_welcome"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/text_edit_create_employee_last_name"
        android:hint="@string/text_edit_employee_id"
        android:layout_below="@+id/text_view_create_employee_welcome"
        android:layout_alignLeft="@+id/text_edit_password"
        android:layout_alignStart="@+id/text_edit_password"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/text_edit_password"
        android:hint="@string/text_edit_password"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_edit_create_employee_last_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/button_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_create_user_profile"
        android:onClick="loginButtonOnClick (LoginLandingActivity)"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/text_edit_create_employee_last_name"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
